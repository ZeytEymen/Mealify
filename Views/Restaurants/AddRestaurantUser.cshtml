@{
    Layout = null;
}


@model Mealify.Models.ApplicationUser

@if (!ViewBag.Authorized)
{
    <p class="text-center">Seems like <strong class="text-bg-danger">&nbsp;YOU ARE NOT AUTHORIZED&nbsp;</strong> for this action !!!</p>
}
@if (ViewBag.Authorized)
{
    <div class="row">
        <div class="col-md-12">
            <div class="postResult"></div>
            <form id="addRestaurantUser" onsubmit="return false">
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.Companies">
                    </select>
                </div><br />
                <div class="form-group">
                    <input data-send="1" data-post-url="Restaurants/AddRestaurantUser" data-action="addRestaurantUser" type="submit" value="Add User" class="btn btn-primary float-end" />
                </div>
            </form>
        </div>
    </div>
}