@{
    Layout = null;
}
@if(ViewBag.Authorized)
{
    <div class="postResult"></div>
    <form id="deleteCompany" onsubmit="return false">
        <span>Are you really sure delete this item</span>
        <input data-send="1" data-post-url="Companies/DeleteConfirmed/@ViewBag.Id" data-action="deleteCompany" type="submit" value="Yes I'm Sure Delete" class="float-end btn btn-danger" />
    </form>
}
@if(!ViewBag.Authorized)
{
    <p class="text-center">Seems like <strong class="text-bg-danger">&nbsp;YOU ARE NOT AUTHORIZED&nbsp;</strong> for this action !!!</p>
}