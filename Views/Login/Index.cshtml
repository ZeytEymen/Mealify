@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Mealify.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/style.css">
<style>
    .btn-color {
        background-color: #0e1c36;
        color: #fff;
    }

    .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }



    .cardbody-color {
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">MEALIFY</h2>
            <div class="text-center mb-5 text-dark">[management is in your hands]</div>
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" asp-action="Login">

                    <div class="text-center">
                        <img src="/zyro-image.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3" width="100px" alt="profile">
                    </div>

                    <div class="mb-3">
                        <input type="text" class="form-control" id="Username" name="username" aria-describedby="emailHelp" placeholder="Username">
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        Not Registered? -> <a href="/Login" class="text-dark fw-bold">Create An Account</a>&emsp;|&emsp;
                        Forgot Your Password -> <a href="/Login" class="text-dark fw-bold">Reset Password</a><br /><hr />
                        <a href="/Index" class="text-light bg-black  fw-bold">&emsp;CONTINUE WITHOUT LOGIN&emsp;</a><br /><br />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>